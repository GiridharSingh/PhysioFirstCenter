@model Physio.Models.AboutViewModel
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<title>About us</title>
<div class="content indent">
    <!--content-->
    <div class="who-box">
        <div class="container">
            <div class="row">
                    <div id="divWHO-WE-AREContainer" class="col-lg-4 col-md-6 col-sm-6 wow fadeInUp animated" style="visibility: visible; animation-name: fadeInUp;">
                      <!---- WHO-WE-ARE partial View content will load from DB----->
                    </div>
                    <div class="col-lg-4 col-md-6 col-sm-6 wow fadeInUp animated" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">
                        <h2>Our History</h2>

                        @Html.Partial("_History", Model.lstHistory)

                    </div>
                    <div id="divPATIENTS-INFOContainer" class="col-lg-4 col-md-12 col-sm-12 wow fadeInUp animated" data-wow-delay="0.2s" style="visibility: visible; animation-delay: 0.2s; animation-name: fadeInUp;">
                        <!---- PATIENTS-INFO partial View content will load from DB----->
                    </div>
                </div>
            </div>
        </div>
        <div class="thumb-box9">
            <div class="container">
                <h2 class="wow fadeInLeft animated" style="visibility: visible; animation-name: fadeInLeft;">Our Staff</h2>
                @Html.Partial("_Staff", Model.lstEmployee)
            </div>
        </div>      
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $.ajax({
                url: '/Home/GetPartialview?PageCode=WHO-WE-ARE',
                type: 'GET',
                contentType: 'application/html; charset=utf-8',
                dataType: 'html',
                success: function (content) {
                    $('#divWHO-WE-AREContainer').html(content);
                },
                error: function (xhr, status) {
                    alert(status);
                }
            });
            $.ajax({
                url: '/Home/GetPartialview?PageCode=PATIENTS-INFO',
                type: 'GET',
                contentType: 'application/html; charset=utf-8',
                dataType: 'html',
                success: function (content) {
                    $('#divPATIENTS-INFOContainer').html(content);
                },
                error: function (xhr, status) {
                    alert(status);
                }
            });

        });

    </script>

