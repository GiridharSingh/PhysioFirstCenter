@model Physio.Models.HomeViewModel
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.ActionLink("Admin App", "Index", "Home", new { area = "Admin" }, null)
<title>Home</title>
<div class="content">
    <div class="thumb-box1">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-8 col-sm-8 wow fadeInUp">
                    <p class="title">We care about soundness of your body</p>
                    <p>We do physiotherapy. Assessment, Diagnosis and Evidence based treatments for orthopedic, sports and neurological condition. We are equipped with state of art gadgets that are crucial in conservative management. Our physiotherapy assessment and treatment methodology make a difference.</p>
                    <p>We have earned a reputation for being able to provide patients with nearly all types of physio treatments and services at a reasonable price.</p>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 wow fadeInUp" data-wow-delay="0.2s">
                    <a href="#" class="btn-default btn1">More</a>
                </div>
            </div>
        </div>
    </div>
    <div class="thumb-box2">
        <div class="container">
            <p class="title wow fadeInLeft">ABOUT CLINIC</p>
            <div class="row">
                @foreach (var item in Model.lstAboutClinic)
                {
                    <div class="col-lg-4 col-md-4 col-sm-4 wow fadeInUp">
                        <div class="thumb-pad1">
                            <div class="thumbnail">
                                <strong><img src="~/Content/Images/page1_icon1.png" alt=""></strong>
                                <div class="caption">
                                    <p class="description">
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </p>
                                    <p>
                                        @Html.DisplayFor(modelItem => item.ShortDesc)
                                    </p> 
                                    <figure><img src="~/Content/images/page2_pic2.jpg" alt=""></figure>
                                    @*<figure>
                                        @{var imgSrc = "";
                                        if (item.Image != null)
                                        {
                                            var base64 = Convert.ToBase64String(item.Image);
                                            imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                                        }
                                        <img src="@imgSrc" alt="" />
                                        }

                                    </figure>*@
                                    
                                    <a href="@Url.Action("Index", "ClinicDetail", new { id = item.Id })" class="btn-default btn2">read more <i></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }               
            </div>
        </div>
    </div>
    <div class="thumb-box2">
        <div class="container">           
            <p class="title wow fadeInLeft">Our services</p>           
            <div class="row">
                @foreach (var item in Model.lstServices)
                {
                    if (item.Priority == 1)
                    {
                        <div class="col-lg-4 col-md-4 col-sm-4 wow fadeInUp">
                            <div class="thumb-pad2-1 maxheight">
                                <div class="thumbnail">
                                    <figure>
                                        @{var imgSrc = "";
                                        if (item.Image != null)
                                        {
                                            var base64 = Convert.ToBase64String(item.Image);
                                            imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                                        }
                                        <img src="@imgSrc" alt="" />
                                        }

                                    </figure>
                                    <div class="caption">
                                            <p class="title">
                                                @Html.DisplayFor(modelItem => item.ServiceName)
                                            </p>
                                            <p>
                                                @Html.DisplayFor(modelItem => item.ShortDesc)                                           
                                            </p>                                               
                                            <a href="@Url.Action("Index", "ServicesDetail", new { id = item.ServiceId })">
                                                <img alt="Click here" src="@Url.Content("~/Content/Images/more_arrow1.png")">
                                            </a>
                                        </div>
                                </div>
                            </div>
                        </div>
                    }
                }              
            </div>
        </div>
    </div>
