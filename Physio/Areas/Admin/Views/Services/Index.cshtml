@model IEnumerable<Models.ServicesModel>

@{
    ViewBag.Title = "Service List";    
}

<div class="content indent">   
    <div class="container">
        <h4>Services</h4>
        <div class="row">
            <p>
                @Html.ActionLink("Create New", "Create", new { area = "Admin" }, new { @class = "btn btn-default" })
            </p>
            <div class="col-md-12">
                <table id="tblServices" class="table table-striped table-bordered" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ServiceName</th>
                            <th>ShortDesc</th>
                            <th>Priority</th>
                            <th>LongDesc</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ServiceName</th>
                            <th>ShortDesc</th>
                            <th>Priority</th>
                            <th>LongDesc</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ServiceName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ShortDesc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Priority)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LongDesc)
                                </td>

                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ServiceId }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ServiceId }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ServiceId, onclick = "return DeleteConfirm();" }, null)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>                          
        </div>
     </div>
 </div>
    <script>
   
    $(document).ready(function () {
        $('#tblServices').DataTable();
    });

    function DeleteConfirm() {
        if (confirm("Are you sure want to delete record"))
            return true;
        else
            return false;
    }
    </script>
