@model Models.ServicesModel

@{
    ViewBag.Title = "Details";
    
}

<h4>Details</h4>

<div>
        <div class="row">
            <div class="col-md-6">
                <div class="col-lg-12">
                    <div class="col-lg-3">
                        @Html.DisplayNameFor(model => model.ServiceName)
                    </div>
                    <div class="col-lg-9">
                        @Html.DisplayFor(model => model.ServiceName)
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="col-lg-3">
                        @Html.DisplayNameFor(model => model.ShortDesc)
                    </div>
                    <div class="col-lg-9">
                        @Html.DisplayFor(model => model.ShortDesc)
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="col-lg-3">
                        @Html.DisplayNameFor(model => model.LongDesc)
                    </div>
                    <div class="col-lg-9">
                        @Html.DisplayFor(model => model.LongDesc)
                    </div>

                </div>
            </div>
            <div class="col-md-6">
                <div class="col-lg-3">
                    @Html.DisplayNameFor(model => model.Image)
                </div>
                <div class="col-lg-9">
                    @{var imgSrc = "";
                        if (Model.Image != null)
                        {
                            var base64 = Convert.ToBase64String(Model.Image);
                            imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                        }
                        <img src="@imgSrc" style="max-width:200px; max-height:200px;" />
                    }
                </div>
            </div>
        </div>
      
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ServiceId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
