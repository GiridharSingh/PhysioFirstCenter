@model IEnumerable<Models.PartialPageModel>

@{
    ViewBag.Title = "Partial Resources";
}

<div class="content indent">
    <div class="container">
        <h4>Partial Resources</h4>
        <div class="row">
            <p>
                @Html.ActionLink("Create New", "AddEditPartial", new { area = "Admin" }, new { @class = "btn btn-default" })
            </p>
            <div class="col-md-12">
                <table id="tblPartialPages" class="table table-striped table-bordered" cellspacing="0">
                    <thead>
                        <tr>
                            <th>PageCode</th>
                            <th>PageTitle</th>
                            <th>ShortDesc</th>
                            <th>LongDesc</th>
                            <th>IsActive</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    @*<tfoot>
                <tr>
                    <th>PageCode</th>
                    <th>ShortDesc</th>
                    <th>Priority</th>
                    <th>LongDesc</th>
                    <th>IsActive</th>
                    <th>Action</th>
                </tr>
            </tfoot>*@
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PageCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PageTitle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ShortDesc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LongDesc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "AddEditPartial", new { id = item.PartialPageId }) |
                                    @*@Html.ActionLink("Details", "Details", new { id = item.ServiceId }) |*@
                                    @Html.ActionLink("Delete", "DeletePartial", new { id = item.PartialPageId, onclick = "return DeleteConfirm();" }, null)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>

    $(document).ready(function () {
        $('#tblPartialPages').DataTable();
    });

    function DeleteConfirm() {
        if (confirm("Are you sure want to delete record"))
        {
            return true;
        } else { return false; }
                                          
    }
</script>

