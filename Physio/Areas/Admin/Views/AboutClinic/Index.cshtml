@model IEnumerable<Models.AboutClinicModel>

@{
    ViewBag.Title = "About Clinic";
}

<div class="content indent">
    <div class="container">
        <h4>About Clinic</h4>
        <div class="row">
            <p>
                @Html.ActionLink("Create New", "Create", "AboutClinic", new { area = "Admin" }, new { @class = "btn btn-default" })
            </p>
            <div class="col-md-12">
                <table id="tblAboutClinic" class="table table-striped table-bordered" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Short Desc</th>
                            <th>Priority</th>
                            <th>Long Desc</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    @*<tfoot>
                        <tr>
                            <th>Title</th>
                            <th>Short Desc</th>
                            <th>Priority</th>
                            <th>Long Desc</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>*@
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ShortDesc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Priority)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LongDesc)
                                </td>

                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "ClinicDetails", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "ClinicDetails", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {
        $('#tblAboutClinic').DataTable();
    });
</script>
