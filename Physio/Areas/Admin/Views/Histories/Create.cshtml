@model DAL.History

@{
    ViewBag.Title = "Create History";

}
<script type="text/javascript">
    $(function () {

        // Setup form validation on the #register-form element
        $("#HistoryCreate").validate({

            // Specify the validation rules
            rules: {
                HistoryYear: "required",
            },

            // Specify the validation error messages
            messages: {
                HistoryYear: "Please enter your first name",
            },

            submitHandler: function (form) {
                form.submit();
            }
        });

    });
</script>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "HistoryCreate" }))
{
    @Html.AntiForgeryToken()
    <div class="content indent">
        <div class="container">
            <h4>Create History</h4>
            <div class="form-horizontal">
                <div class="row">
                    <div class="col-md-8">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.HistoryYear, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.HistoryYear, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.HistoryYear, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.ShortDesc, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.ShortDesc, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ShortDesc, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.LongDesc, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.LongDesc, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.LongDesc, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-default" />
                                @Html.ActionLink("Back", "Index", "Histories", new { area = "Admin" }, new { @class = "btn btn-default" })
                            </div>
                        </div>
                                              
                    </div>
                 </div>
              </div>
           </div>
        </div>
    
}


