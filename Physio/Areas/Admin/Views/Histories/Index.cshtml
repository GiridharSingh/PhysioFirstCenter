@model IEnumerable<DAL.History>

@{
    ViewBag.Title = "Index";

}
<div class="content indent">
    <div class="container">
        <h4>Histories</h4>
        <div class="row">
            <p>
                @Html.ActionLink("Create New", "Create", "Histories", new { area = "Admin" }, new { @class = "btn btn-default" })
            </p>
            <div class="col-md-12">
                <table id="tblHistory" class="table table-striped table-bordered" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Year</th>
                            <th>Title</th>
                            <th>Long Description</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Year</th>
                            <th>Title</th>
                            <th>Long Description</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HistoryYear)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ShortDesc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LongDesc)
                                </td>

                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.HistoryId }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.HistoryId }) |
                                    @Html.ActionLink("Delete", "Details", new { id = item.HistoryId })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>

    $(document).ready(function () {
        $('#tblHistory').DataTable();
    });
</script>
