@model IEnumerable<DAL.History>

@{
    ViewBag.Title = "Index";

}
<div class="content indent">
    <div class="container">
        <h4>Histories</h4>
        <div class="row">
            <p>
                @Html.ActionLink("Create New", "Create", "Histories", new { area = "Admin" }, new { @class = "btn btn-default" })
            </p>
            <table class="table" id="tblHistory">
                <thead>
                    <tr>
                        <th>Year</th>
                        <th>Title</th>
                        <th>Long Description</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.HistoryYear)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ShortDesc)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LongDesc)
                            </td>

                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.HistoryId }) |
                                @Html.ActionLink("Details", "Details", new { id = item.HistoryId }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.HistoryId })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>

    $(document).ready(function () {
        $('#tblHistory').DataTable({
            "columnDefs": [
                { "width": "15%", "targets": 0 },
                { "width": "20%", "targets": 1 },
                { "width": "50%", "targets": 2 },
                { "width": "15%", "targets": 3 }
            ]
        });
    });
</script>
