@model DAL.History

@{
    ViewBag.Title = "Details";

}
<script>
    $(function () {
        $("#btnDelete").click(function () {
            confirm('Are you sure you want to delete this item ?');
        });

    });
</script>
<div class="content indent">
    <div class="container">
        <h4>Detail</h4>
        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-8">

                    <div class="form-group ">
                        <div class="col-md-2">
                            @Html.DisplayNameFor(model => model.HistoryYear)
                        </div>
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.HistoryYear)
                        </div>
                    </div>

                    <div class="form-group ">
                        <div class="col-md-2">
                            @Html.DisplayNameFor(model => model.ShortDesc)
                        </div>
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.ShortDesc)
                        </div>
                    </div>

                    <div class="form-group ">
                        <div class="col-md-2">
                            @Html.DisplayNameFor(model => model.LongDesc)
                        </div>
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.LongDesc)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-2">
                            @Html.DisplayNameFor(model => model.IsActive)
                        </div>
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.IsActive)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-2">
                            @Html.DisplayNameFor(model => model.CreatedDate)
                        </div>
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.CreatedDate)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-2">
                            @Html.DisplayNameFor(model => model.UpdatedDate)
                        </div>
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.UpdatedDate)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-2">
                            @Html.DisplayNameFor(model => model.CreatedBy)
                        </div>
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.CreatedBy)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-2">
                            @Html.DisplayNameFor(model => model.UpdatedBy)
                        </div>
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.UpdatedBy)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10"> 
                            @Html.ActionLink("Back", "Index", "Histories", new { area = "Admin" }, new { @class = "btn btn-default" })
                            @Html.ActionLink("Edit History", "Edit", "Histories", new { area = "Admin", id = Model.HistoryId }, new { @class = "btn btn-default" })
                            @Html.ActionLink("Delete History", "DeleteHistory", "Histories", new { area = "Admin", id = Model.HistoryId }, new { id = "btnDelete", @class = "btn btn-default" })                         
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
